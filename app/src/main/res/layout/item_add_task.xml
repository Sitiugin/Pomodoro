<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_add_task"
    style="@style/ButtonStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:padding="0dp"
    android:layout_marginHorizontal="@dimen/margin_content"
    android:background="@drawable/drawable_foreground_rounded_bottom">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_add_task"
        style="@style/TextStyle.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_plus_black"
        android:gravity="start"
        android:padding="@dimen/margin_content"
        android:text="@string/view_project_title_add_task" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/view_color_tag"
        android:layout_width="@dimen/radius_medium"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:srcCompat="@drawable/drawable_color_tag_rounded_bottom_left" />
</FrameLayout>