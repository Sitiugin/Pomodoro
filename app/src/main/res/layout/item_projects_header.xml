<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_project_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_content_half"
    android:clipChildren="false"
    android:clipToPadding="false">

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/TextStyle"
        android:id="@+id/text_view_tasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_content_half"
        android:text="@string/projects_title_tasks"
        android:drawableStart="@drawable/ic_task_gray_small"
        android:drawablePadding="@dimen/margin_content_quarter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/ViewStyle.Rounded.Clickable"
        android:id="@+id/layout_today"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_content"
        android:layout_marginHorizontal="@dimen/margin_content_half"
        android:padding="@dimen/margin_content"
        android:clipToPadding="false"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/text_view_tasks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/layout_this_week">
        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextStyle.Count"
            android:id="@+id/text_view_task_count_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextStyle"
            android:id="@+id/text_view_due_date_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/projects_text_today"
            app:layout_constraintTop_toBottomOf="@+id/text_view_task_count_today"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/ViewStyle.Rounded.Clickable"
        android:id="@+id/layout_this_week"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_content"
        android:layout_marginHorizontal="@dimen/margin_content_half"
        android:padding="@dimen/margin_content"
        android:clipToPadding="false"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/text_view_tasks"
        app:layout_constraintStart_toEndOf="@+id/layout_today"
        app:layout_constraintEnd_toStartOf="@+id/layout_overdue">
        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextStyle.Count"
            android:id="@+id/text_view_task_count_this_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextStyle"
            android:id="@+id/text_view_due_date_this_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/projects_text_this_week"
            app:layout_constraintTop_toBottomOf="@+id/text_view_task_count_this_week"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/ViewStyle.Rounded.Clickable"
        android:id="@+id/layout_overdue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_content"
        android:layout_marginHorizontal="@dimen/margin_content_half"
        android:padding="@dimen/margin_content"
        android:clipToPadding="false"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/text_view_tasks"
        app:layout_constraintStart_toEndOf="@+id/layout_this_week"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextStyle.Count"
            android:id="@+id/text_view_task_count_overdue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextStyle"
            android:id="@+id/text_view_due_date_overdue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/projects_text_overdue"
            app:layout_constraintTop_toBottomOf="@+id/text_view_task_count_overdue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/TextStyle"
        android:id="@+id/text_view_projects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_content"
        android:layout_marginStart="@dimen/margin_content_half"
        android:text="@string/projects_title_projects"
        android:drawableStart="@drawable/ic_project_gray_small"
        android:drawablePadding="@dimen/margin_content_quarter"
        app:layout_constraintTop_toBottomOf="@+id/layout_today"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>