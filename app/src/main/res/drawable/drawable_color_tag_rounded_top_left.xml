<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@+id/shape_color_tag">
        <shape
            android:width="@dimen/radius_medium"
            android:shape="rectangle">
            <solid android:color="@color/colorHighlight" />
            <corners
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"
                android:radius="@dimen/radius_medium"
                android:topLeftRadius="@dimen/radius_medium"
                android:topRightRadius="0dp" />
        </shape>
    </item>

    <item
        android:id="@+id/shape_color_tag_overlay"
        android:width="@dimen/radius_medium"
        android:start="@dimen/width_color_tag">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorForeground" />
            <corners
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"
                android:radius="@dimen/radius_medium"
                android:topLeftRadius="@dimen/radius_medium"
                android:topRightRadius="0dp" />
        </shape>
    </item>

</layer-list>