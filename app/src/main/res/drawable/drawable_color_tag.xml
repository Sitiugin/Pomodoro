<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/shape_color_tag"
        android:width="@dimen/radius_small">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/colorHighlight"/>
            <corners
                android:radius="@dimen/radius_small"
                android:topLeftRadius="@dimen/radius_small"
                android:topRightRadius="0dp"
                android:bottomLeftRadius="@dimen/radius_small"
                android:bottomRightRadius="0dp"/>
        </shape>
    </item>

    <item
        android:id="@+id/shape_color_tag_overlay"
        android:width="@dimen/radius_small"
        android:start="@dimen/width_color_tag">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorForeground" />
            <corners
                android:bottomLeftRadius="@dimen/radius_small"
                android:bottomRightRadius="0dp"
                android:radius="@dimen/radius_small"
                android:topLeftRadius="@dimen/radius_small"
                android:topRightRadius="0dp" />
        </shape>
    </item>

</layer-list>