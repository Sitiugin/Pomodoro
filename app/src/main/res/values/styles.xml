<resources>


    <!--                                                                              BASE THEME -->

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- colors -->
        <item name="colorPrimary">@color/colorForeground</item>
        <item name="colorPrimaryDark">@color/colorForeground</item>
        <item name="colorAccent">@color/colorHighlight</item>
        <item name="android:colorEdgeEffect">@color/colorHighlight</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="android:colorControlActivated">@color/colorHighlight</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:statusBarColor">@color/colorBackground</item>

        <!-- fonts -->
        <item name="android:fontFamily">@string/font_sans_serif_light</item>

        <!-- other -->
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/drawable_splash</item>
    </style>

    <!--                                                                           APP BAR THEME -->

    <style name="AppBarStyle">
        <item name="android:background">@color/colorBackground</item>
        <item name="android:elevation">@dimen/elevation_navigation</item>
        <item name="android:stateListAnimator">@animator/app_bar_elevation</item>
    </style>

    <style name="TransparentAppBarStyle">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BottomNavigationStyle">
        <item name="android:height">@dimen/height_app_bar</item>
        <item name="android:background">@color/colorBackground</item>
        <item name="android:elevation">@dimen/elevation_bottom_bar</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="itemIconTint">@drawable/selector_tint_navigation</item>
        <item name="itemTextColor">@drawable/selector_tint_navigation</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="FloatingActionButtonStyle">
        <item name="backgroundTint">@color/colorHighlight</item>
        <item name="tint">@android:color/white</item>
        <item name="rippleColor">@android:color/white</item>
        <item name="elevation">@dimen/elevation_fab</item>
        <item name="pressedTranslationZ">@dimen/elevation_fab_high</item>
    </style>

    <style name="FloatingActionButtonStyle.Small">
        <item name="backgroundTint">@android:color/white</item>
        <item name="tint">@android:color/black</item>
        <item name="rippleColor">@color/colorRipple</item>
        <item name="elevation">@dimen/elevation_fab</item>
        <item name="pressedTranslationZ">@dimen/elevation_fab_high</item>
        <item name="fabSize">mini</item>
    </style>



    <!--                                                                            BUTTON THEME -->

    <style name="BaseButtonStyle">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@string/font_sans_serif_thin</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/margin_content</item>
    </style>
    <style name="ButtonStyle" parent="@style/BaseButtonStyle">
        <item name="android:background">@color/colorForeground</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:stateListAnimator">@animator/lift_on_touch</item>
    </style>
    <style name="ButtonStyle.Colored" parent="@style/ButtonStyle">
        <item name="android:background">@color/colorHighlight</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="ButtonStyle.Borderless" parent="@style/BaseButtonStyle">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    <style name="ButtonStyle.Borderless.Colored" parent="@style/ButtonStyle.Borderless">
        <item name="android:textColor">@color/colorHighlight</item>
    </style>
    <style name="ButtonStyle.Borderless.Colored.Small" parent="@style/ButtonStyle.Borderless.Colored">
        <item name="android:padding">@dimen/margin_content_half</item>
        <item name="android:gravity">start</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="ToggleButtonStyle">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">@dimen/margin_content_half</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:fontFamily">@string/font_sans_serif_thin</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ImageButtonStyle">
        <item name="android:padding">@dimen/margin_content_half</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:background">@color/colorForeground</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:stateListAnimator">@animator/lift_on_touch</item>
    </style>

    <style name="ImageButtonStyle.Borderless" parent="@style/ImageButtonStyle">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:foreground">@null</item>
    </style>


    <!--                                                                              VIEW THEME -->

    <style name="ViewStyle">
        <item name="android:background">@color/colorForeground</item>
        <item name="android:elevation">@dimen/elevation_view</item>
    </style>

    <style name="ViewStyle.Rounded">
        <item name="android:background">@drawable/drawable_foreground_rounded_small</item>
        <item name="android:elevation">@dimen/elevation_view</item>
    </style>

    <style name="ViewStyle.Rounded.Clickable" parent="ViewStyle.Rounded">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">@drawable/ripple_rounded_small</item>
        <item name="android:stateListAnimator">@animator/lift_on_touch</item>
    </style>

    <style name="ViewStyle.Clickable">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:stateListAnimator">@animator/lift_on_touch</item>
    </style>

    <style name="ViewStyle.Clickable.Borderless">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">@dimen/margin_content</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="ViewStyle.Toggle">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">@dimen/margin_content</item>
        <item name="android:background">@drawable/selector_bg_toggle</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:stateListAnimator">@animator/lift_on_touch_toggle</item>
    </style>

    <style name="ViewStyle.Selectable">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">@dimen/margin_content</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="ViewStyle.Search">
        <item name="android:textCursorDrawable">@drawable/drawable_cursor</item>
        <item name="android:background">@drawable/drawable_foreground_rounded_large</item>
        <item name="android:elevation">@dimen/elevation_view</item>
        <item name="android:stateListAnimator">@animator/lift_on_touch</item>
    </style>


    <!--                                                                              TEXT THEME -->

    <style name="TextStyle">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:fontFamily">@string/font_sans_serif_light</item>
    </style>

    <style name="TextStyle.ShowActive" parent="TextStyle">
        <item name="android:textColor">@drawable/selector_tint_text_transparent</item>
    </style>

    <style name="TextStyle.Colored" parent="TextStyle">
        <item name="android:textColor">@color/colorHighlight</item>
    </style>

    <style name="TextStyle.AppBar" parent="TextStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_app_bar</item>
    </style>

    <style name="TextStyle.Title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:fontFamily">@string/font_sans_serif_normal</item>
    </style>

    <style name="TextStyle.Title.Selectable" parent="TextStyle.Title">
        <item name="android:textColor">@drawable/selector_tint_text</item>
    </style>

    <style name="TextStyle.Time">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_giant</item>
        <item name="android:fontFamily">@string/font_sans_serif_thin</item>
    </style>


    <!--                                                                         EDIT TEXT THEME -->

    <style name="EditTextStyle">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:textCursorDrawable">@drawable/drawable_cursor</item>
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>

    <style name="EditTextStyle.Large" parent="EditTextStyle">
        <item name="android:textCursorDrawable">@drawable/drawable_cursor_large</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@string/font_sans_serif_thin</item>
    </style>

</resources>
